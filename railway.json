{
    "$schema": "https://railway.app/railway.schema.json",
    "services": {
        "bridge": {
            "source": {
                "root": "/"
            },
            "build": {
                "builder": "NIXPACKS"
            },
            "deploy": {
                "startCommand": "npm run dev:bridge",
                "healthcheckPath": "/slack/events",
                "healthcheckTimeout": 100
            }
        },
        "cognee": {
            "source": {
                "root": "src/aibc/memory/cognee-service"
            },
            "build": {
                "builder": "DOCKER"
            },
            "deploy": {
                "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8001"
            }
        }
    }
}